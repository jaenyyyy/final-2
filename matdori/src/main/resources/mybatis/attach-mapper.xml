<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="attach">

	<!-- 시퀀스 등록 -->
	<select id="sequence" resultType="int">
		select attach_seq.nextval from dual
	</select>
	
	<!-- 등록 -->
	<insert id="insert">
		insert into attach(attach_no, attach_name, attach_size, attach_type) 
			values (#{attachNo}, #{attachName}, #{attachSize}, #{attachType})
	</insert>
	
	<!-- 삭제 -->
	<delete id="remove">
		delete attach where attach_no = #{attachNo}
	</delete>
	
	<!-- 조회 -->
	<select id="list" resultType="AttachDto">
		select * from attach order by attach_no desc
	</select>
	
	<!-- 상세 -->
	<select id="detail" resultType="AttachDto">
		select * from attach where attach_no = #{attachNo}
	</select>
</mapper>